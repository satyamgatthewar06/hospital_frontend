# Database - MongoDB Atlas
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.voevdkw.mongodb.net/hospitalDB?retryWrites=true&w=majority

# Database - MySQL (if using local MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_secure_mysql_password
DB_NAME=hospital_management

# Server
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://healthapp.io

# JWT Authentication (MUST set strong random values in production!)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long_12345678
JWT_REFRESH_SECRET=your_refresh_token_secret_min_32_characters_long_12345678
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Payment Gateway - Razorpay (Optional)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# TPA Integration (Optional)
TPA_API_KEY=your_tpa_api_key
TPA_BASE_URL=https://tpa-provider.com/api

# Logging
LOG_LEVEL=info
